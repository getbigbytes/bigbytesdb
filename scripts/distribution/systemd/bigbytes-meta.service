[Unit]
Description=Bigbytes Meta
Documentation=https://docs.bigbytes.com
After=network-online.target
Requires=network-online.target

[Service]
User=bigbytes
Group=bigbytes
ExecStart=/usr/bin/bigbytes-meta --config-file /etc/bigbytes/bigbytes-meta.toml
ExecReload=/bin/kill -HUP $MAINPID
Restart=no
AmbientCapabilities=CAP_NET_BIND_SERVICE
EnvironmentFile=-/etc/default/bigbytes-meta

[Install]
WantedBy=multi-user.target
