[Unit]
Description=Bigbytes Query
Documentation=https://docs.bigbytes.com
After=network-online.target
Requires=network-online.target

[Service]
User=bigbytes
Group=bigbytes
LimitNOFILE=65535
ExecStart=/usr/bin/bigbytes-query --config-file /etc/bigbytes/bigbytes-query.toml
ExecReload=/bin/kill -HUP $MAINPID
Restart=no
AmbientCapabilities=CAP_NET_BIND_SERVICE
EnvironmentFile=-/etc/default/bigbytes-query

[Install]
WantedBy=multi-user.target
